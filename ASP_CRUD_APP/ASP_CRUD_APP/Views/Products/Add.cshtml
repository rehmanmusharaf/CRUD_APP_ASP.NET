@model ASP_CRUD_APP.Models.AddProductViewModel

<h3 class="text-center otherclass">ADD Products</h3>
<form    method="post">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" aria-describedby="productnameHelp" placeholder="Enter Name" required />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" placeholder="Price" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" type="number" placeholder="Quantity" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tags" class="control-label"></label>
        <input asp-for="Tags" class="form-control" placeholder="Tags (comma-separated)" />
        <span asp-validation-for="Tags" class="text-danger"></span>
    </div>

